<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="home.scss">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <title>Acme Web Design | Welcome</title>
<script>
$(document).ready(function(){
  $(".button_2").click(function(){
    alert("글이 작성되었습니다.");
  });
});
</script>
</script>
</head>

<body>
    <section id="new">
        <div class="container">
            <%=form_tag home_create_path, method:"POST", multipart:"true" do %>
                
                <input class="title_input form-control" type="text" placeholder="Enter the title..." name="title">
                <div class="content_box">
                    <textarea class="form-control" type="text" cols="150" rows="15" name="content"></textarea>
                </div>
                <%=file_field_tag :image %><br>
                <button type="submit" class="button_2">Create</button>
            <%end%>
        </div>
    </section>
    
    
    <div id="wait" style="display:none;width:69px;height:89px;border:1px solid black;position:absolute;top:50%;left:50%;padding:2px;"><img src='demo_wait.gif' width="64" height="64" /><br>Loading..</div>
    
</body>